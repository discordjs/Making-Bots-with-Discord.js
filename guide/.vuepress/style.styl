// remove when vuepres-theme-yuu gets updated
.token.deleted {
	color: #da3b3b !important;
}

.token.inserted {
	color: #42b983 !important;
}

// temporary; should be adjusted in vuepres-theme-yuu
.algolia-search-wrapper {
	.algolia-autocomplete  {
		.algolia-docsearch-suggestion .algolia-docsearch-suggestion--category-header .algolia-docsearch-suggestion--highlight {
			background-color: rgba(#fff, 0.25);
		}

		.algolia-docsearch-suggestion--text .algolia-docsearch-suggestion--highlight {
			box-shadow: inset 0 -2px 0 0 rgba(#3eaf7c, 0.8);
		}
	}
}

.yuu-theme-blue {
	.algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion--text .algolia-docsearch-suggestion--highlight {
		box-shadow: inset 0 -2px 0 0 rgba(#2196f3, 0.8);
	}
}

.yuu-theme-red {
	.algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion--text .algolia-docsearch-suggestion--highlight {
		box-shadow: inset 0 -2px 0 0 rgba(#d52323, 0.8);
	}
}

@media (max-width: 720px) {
	.algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--subcategory-column {
		opacity: 1;
		background-color: transparent !important;
	}

	.yuu-theme-dark .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--subcategory-column-text {
		background-color: rgba(#fff, 0.1);
	}
}
